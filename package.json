{
	"name": "xq-confirm",
	"version": "1.0.9",
	"description": "基于Bootstrap5的Modal组件实现确认提示框，支持确认按钮、取消按钮的回调，同时也可以自动确认和自动取消，不依赖Jquery库文件和Vue、React等框架技术。",
	"files": [
		"dist"
	],
	"main": "./dist/index.mjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		}
	},
	"scripts": {
		"dev": "vite serve src/",
		"html": "vite build src/",
		"build": "npx unbuild && npm run convert && npm run min && npx xq-banner",
		"convert": "rollup ./dist/index.cjs --format iife --file ./dist/xq-confirm.js",
		"min": "uglifyjs ./dist/xq-confirm.js -m -o ./dist/xq-confirm.min.js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/xqkeji/xq-confirm.git"
	},
	"keywords": [
		"HTML5",
		"JavaScript",
		"TypeScript",
		"BootStrap5",
		"Modal",
		"Confirm"
	],
	"author": "xqkeji.cn",
	"license": "SSPL-1.0",
	"homepage": "https://xqkeji.cn/demo/xq-confirm",
	"dependencies": {
		"@popperjs/core": "^2.11.6",
		"bootstrap": "^5.2.3",
		"bootstrap-icons": "^1.10.3",
		"xq-util": "^1.0.1"
	},
	"devDependencies": {
		"@types/bootstrap": "^5.2.6",
		"@types/node": "^18.13.0",
		"sass": "^1.58.0",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5",
		"uglify-js": "^3.17.4",
		"unbuild": "^1.1.1",
		"vite": "^4.1.1",
		"vite-plugin-xq-cp-dep": "^1.0.5",
		"vite-plugin-xq-include": "^1.0.18",
		"xq-banner": "^1.0.8"
	}
}
